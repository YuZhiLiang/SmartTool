<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- A 'parent' preference, which enables/disables child preferences (below)
         when checked/unchecked. -->
    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/low_battery_reminder_toggle_key"
        android:title="@string/pref_title_low_battery_remind"/>

    <!-- Allows the user to choose a ringtone in the 'notification' category. -->
    <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->
    <!-- NOTE: RingtonePreference's summary should be set to its value by the activity code. -->
    <!--<RingtonePreference
        android:defaultValue="content://settings/system/notification_sound"
        android:dependency="notifications_new_message"
        android:key="notifications_new_message_ringtone"
        android:ringtoneType="notification"
        android:title="@string/pref_title_ringtone"/>-->
    <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->

    <SwitchPreference
        android:defaultValue="false"
        android:dependency="@string/low_battery_reminder_toggle_key"
        android:key="@string/low_battery_reminder_vibrate_key"
        android:title="@string/pref_title_vibrate"/>

    <ListPreference
        android:defaultValue="@string/default_remind_mode"
        android:dependency="@string/low_battery_reminder_toggle_key"
        android:entries="@array/pref_low_battery_remind_mode_titles"
        android:entryValues="@array/pref_low_battery_remind_mode_values"
        android:key="@string/low_battery_remind_mode_key"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_low_battery_remind_mode"/>

</PreferenceScreen>
